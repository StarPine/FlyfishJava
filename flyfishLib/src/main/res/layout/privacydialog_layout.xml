<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/background_dialog"
    >

    <TextView
        android:id="@+id/privacy_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#000000"
        android:text="服务条款和隐私政策提示"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/privacy_welcom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:lineSpacingMultiplier="1.1"
        android:text=
            "感谢您选择本游戏，我们非常重视您的个人信息和隐私保护。为了更好的保障您的个人权益，请在享受我们的服务前，仔细阅读《游戏服务协议》含儿童游戏服务协议，《用户隐私保护政策》含儿童隐私保护政策的各项条款，如您已详细阅读并同意全部条款后请点击“同意”开始使用我们的服务。"
        android:textColor="#0C0B0B"
        android:letterSpacing="0.03"
        android:maxLines = "3"
        android:scrollbars = "vertical"
        android:textSize="13sp" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/game_fy"
            android:text="《游戏服务协议》"
            android:textColor="#522C2C"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"

            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.1"
            android:text="和"
            android:textSize="13sp" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/game_xy"
            android:text="《用户隐私保护政策》"

            android:textColor="#522C2C"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_qx"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines = "3"
        android:scrollbars = "vertical"
        android:textSize="13sp"
        android:textColor="#5C5757"
         android:text="存储权限：实现账号，图片的缓存和使用，图片保存与分享\n设备信息：读取设备唯一标识用于保护账户安全"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2"
        >

        <Button
            android:id="@+id/privacy_no"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@drawable/bg_no"
            android:text="拒绝"/>

    <Button
        android:id="@+id/privacy_yes"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_yes"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="同意"/>


    </LinearLayout>


</LinearLayout>