<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jxsdk_ball_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hn_menu_height"
    android:gravity="center" >

    <ImageView
        android:id="@+id/mFloatLogoImv"
        android:layout_width="@dimen/hn_menu_height"
        android:layout_height="@dimen/hn_menu_height"
        android:background="@drawable/hn_logo"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/mFloatLoaderImv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter" />

</FrameLayout>